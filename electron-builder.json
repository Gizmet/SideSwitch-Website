{
  "appId": "com.gizmetdev.chatpilot",
  "productName": "ChatPilot",
  "copyright": "Copyright Â© 2024 GizmetDev",
  "asar": true,
  "compression": "maximum",
  "removePackageScripts": true,
  "files": [
    "dist/**/*",
    "node_modules/**/*",
    "package.json"
  ],
  "directories": {
    "output": "release"
  },
  "win": {
    "target": [
      {
        "target": "portable",
        "arch": ["x64"]
      }
    ],
    "icon": "build/icon.ico",
    "signAndEditExecutable": true,
    "signDlls": true,
    "rfc3161TimeStampServer": "http://timestamp.digicert.com",
    "timeStampServer": "http://timestamp.digicert.com",
    "publisherName": "GizmetDev",
    "requestedExecutionLevel": "asInvoker",
    "artifactName": "${productName}-${version}-portable.${ext}"
  },
  "portable": {
    "artifactName": "${productName}-${version}-portable.${ext}"
  },
  "protocols": {
    "name": "chatpilot-protocol",
    "schemes": ["chatpilot"]
  },
  "asarUnpack": [
    "node_modules/sharp/**/*"
  ],
  "extraResources": [
    {
      "from": "build",
      "to": "build",
      "filter": ["icon.*"]
    }
  ],
  "fileAssociations": [],
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "deleteAppDataOnUninstall": true,
    "differentialPackage": true,
    "include": "build/installer.nsh"
  }
} 