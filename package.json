{
  "name": "streamer-app",
  "version": "1.0.0",
  "description": "A dashboard for managing multiple chat roulette sites",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "lint": "eslint src/",
    "clean": "rm -rf dist/",
    "setup": "npm install && npm audit fix",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "electron-builder --win portable",
    "dist": "electron-builder"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "electron-store": "^8.1.0"
  },
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.streamer.app",
    "productName": "Streamer App",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icon.ico"
    },
    "portable": {
      "artifactName": "StreamerApp.exe"
    }
  }
}
